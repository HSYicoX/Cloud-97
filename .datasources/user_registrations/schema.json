
{
  "name": "user_registrations",
  "title": "用户注册信息",
  "schemas": [
    {
      "name": "email",
      "title": "邮箱账号",
      "type": "Email",
      "required": true
    },
    {
      "name": "password",
      "title": "密码",
      "type": "String",
      "required": true
    },
    {
      "name": "username",
      "title": "用户名",
      "type": "String",
      "required": true
    },
    {
      "name": "orcid",
      "title": "ORCID",
      "type": "String"
    },
    {
      "name": "avatarUrl",
      "title": "头像URL",
      "type": "Image"
    },
    {
      "name": "nickname",
      "title": "自定义昵称",
      "type": "String"
    },
    {
      "name": "registrationTime",
      "title": "注册时间",
      "type": "DateTime",
      "format": "timestamp-ms"
    },
    {
      "name": "lastLoginTime",
      "title": "最后登录时间",
      "type": "DateTime",
      "format": "timestamp-ms"
    },
    {
      "name": "isEmailVerified",
      "title": "邮箱验证状态",
      "type": "Boolean"
    },
    {
      "name": "verificationToken",
      "title": "验证令牌",
      "type": "String"
    },
    {
      "name": "verificationTokenExpiry",
      "title": "验证令牌过期时间",
      "type": "DateTime",
      "format": "timestamp-ms"
    },
    {
      "name": "status",
      "title": "账户状态",
      "type": "String"
    },
    {
      "name": "loginCount",
      "title": "登录次数",
      "type": "Number"
    },
    {
      "name": "lastLoginIp",
      "title": "最后登录IP",
      "type": "String"
    },
    {
      "name": "registrationIp",
      "title": "注册IP",
      "type": "String"
    }
  ]
}
  