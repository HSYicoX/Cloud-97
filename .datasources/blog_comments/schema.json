
{
  "name": "blog_comments",
  "title": "博客评论",
  "schemas": [
    {
      "name": "blogId",
      "title": "关联博客ID",
      "type": "String",
      "required": true
    },
    {
      "name": "userId",
      "title": "用户ID",
      "type": "String",
      "required": true
    },
    {
      "name": "userName",
      "title": "用户名",
      "type": "String",
      "required": true
    },
    {
      "name": "userAvatar",
      "title": "用户头像",
      "type": "Image"
    },
    {
      "name": "content",
      "title": "评论内容",
      "type": "MultiLineString",
      "required": true
    },
    {
      "name": "likes",
      "title": "点赞数",
      "type": "Number",
      "default": 0
    },
    {
      "name": "isDeleted",
      "title": "是否删除",
      "type": "Boolean",
      "default": false
    },
    {
      "name": "replyTo",
      "title": "回复对象",
      "type": "String"
    },
    {
      "name": "replies",
      "title": "回复列表",
      "type": "Array",
      "items": {
        "type": "Object",
        "format": {
          "userId": {
            "type": "String",
            "title": "用户ID"
          },
          "content": {
            "type": "String",
            "title": "回复内容"
          },
          "createdAt": {
            "type": "DateTime",
            "title": "回复时间"
          }
        }
      }
    }
  ]
}
  